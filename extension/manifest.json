{
  "manifest_version": 3,
  "name": "Ghost Job Detector",
  "version": "1.0",
  "description": "Detect ghost jobs before applying using AI-powered analysis.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ghost Job Detector"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.greenhouse.io/*",
        "https://*.workday.com/*"
      ],
      "js": ["contentScript.js"]
    }
  ]
}
